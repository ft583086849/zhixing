{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "rewrites": [
    {
      "source": "/api/sales/(.*)",
      "destination": "/api/sales?path=$1"
    },
    {
      "source": "/api/orders/(.*)",
      "destination": "/api/orders?path=$1"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/api/admin?path=$1"
    },
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth?path=$1"
    },
    {
      "source": "/api/lifetime-limit/(.*)",
      "destination": "/api/lifetime-limit?path=$1"
    },
    {
      "source": "/api/payment-config/(.*)",
      "destination": "/api/payment-config?path=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/purchase/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/admin",
      "destination": "/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 